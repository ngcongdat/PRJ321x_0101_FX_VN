  </servlet>
  <servlet-mapping>
    <servlet-name>IndexJSP</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>-->
  
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
